#!/usr/bin/env bash

# Run lint check
lint_output=$(pylint path/to/your/python/code)
lint_exit_code=$?

echo "$lint_output"

# Check the pylint exit code
if [ $lint_exit_code -ne 0 ]; then
  echo "Pylint failed. Please fix the lint issues before committing."
  exit 1
fi

echo "Pylint check passed."
